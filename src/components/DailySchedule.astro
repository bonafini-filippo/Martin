<div class="max-w-5xl mx-auto">
  <!-- Timeline -->
  <div class="relative">
    <!-- Linea verticale centrale -->
    <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-gradient-to-b from-amber-500/50 via-amber-500/30 to-amber-500/50"></div>

    <!-- Eventi -->
    <div class="space-y-12">
      {schedule.map((item, index) => {
        const isLeft = index % 2 === 0;
        return (
          <div class={`relative flex items-center ${isLeft ? 'flex-row' : 'flex-row-reverse'} gap-8`}>
            {/* Card evento */}
            <div class={`w-5/12 ${isLeft ? 'text-right' : 'text-left'}`}>
              <div class="group bg-gray-900 border border-amber-500/20 rounded-xl p-6 hover:border-amber-500 hover:bg-gray-800 transition-all duration-300 hover:scale-105 transform shadow-lg hover:shadow-amber-500/20">
                {/* Icon */}
